<%= form_for(@gallery, url: update_draft_admin_gallery_path(@gallery), method: 'put', html: { multipart: true, class: :row, data: {remote: true} }) do |f| %>
   <fieldset class="columns small-9 scroll-panel">
    <h2><%= t(".title") %></h2>
    <% if  I18n.available_locales.length > 1 %>
      <dl class="tabs" data-tab>
        <% I18n.available_locales.each_with_index do |el, idx| %>
          <dd class="<%= 'active' if idx == 0 %>"><a href="#tab-<%= el %>"><%=  el.to_s  %></a></dd>
          <% content_for(:tabs_content) do %>
            <%= f.fields_for :translations, f.object.translation_for(el) do |builder| %>
              <div id="tab-<%= el %>" class="content <%= 'active' if idx == 0 %>">
                <%= builder.hidden_field :locale %>
                <div class="field">
                  <%= builder.label :name %>
                  <%= builder.text_field :name %>
                </div>
                <div class="field">
                  <%= builder.label :content %>
                  <%= builder.tinymce :content, type: :advance %>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </dl>

      <div class="tabs-content">
        <%= content_for(:tabs_content) %>
      </div>
    <% else %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :content %>
        <%= f.tinymce :content, type: :advance %>
      </div>
    <% end %>
    <%= f.hidden_field :gallery_id, value: @gallery.gallery_id %>
   
  </fieldset>

  <fieldset class="columns small-3 panel">
    <div class="notification hidden"></div>
    
    <%#= f.button nil, class: [:button, :secondary, :round, :expand], name: :commit %>
    <%= f.button t('.save_draft'), class: [:button, :secondary, :round, :expand], name: :save_draft %>
    <%= f.button t('.delete_draft'), class: [:button, :secondary, :round, :expand], name: :delete_draft %>
    <%= f.button t('.publish_draft'), class: [:button, :secondary, :round, :expand], name: :publish_draft %>
    <%= link_to t('helpers.actions.show'), gallery_show_draft_path(@gallery), target: '_blank', class: [:button, :white, :round, :expand] %>
  <div class="sketch">
  <p>Szkic</p>
    Modyfikowano: <%= @gallery.updated_at %>
  </div>    
  </fieldset>

  </div>

<% end %>
