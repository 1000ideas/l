<% title t('.title') %>
<% breadcrumbs_admin link_to(t('.title'), admin_news_index_path) %>

<%= content_tag(:p, flash[:notice], class: :notice) if flash.key? :notice %>
<%= content_tag(:p, flash[:alert], class: :alert) if flash.key? :alert %>

<% if @news.any? %>
<%= render partial: 'l/partials/switcher', object: @news %>

<%= form_for :selection, url: [:selection, :admin, :news, :index], html: {method: :post} do |f| %>
<ul class="items-list one-column" data-page="<%= @news.current_page %>">
  <li class="header">
    <div class="group">
      <div><%= L::News.human_attribute_name :title %></div>
    </div>
  </li>
  <% @news.each do |news| %>
  <li>
    <div class="group" data-context="true">
      <div class="select"><%= f.check_box :ids, {multiple: true}, news.id, nil %></div>
      <div><%= news.title %></div>
      <a href="#" data-context-button="true"></a>
      <div class="options" data-context-target="true">
        <%= link_to t('helpers.actions.show'), admin_news_path(news), class: "show", title: t('helpers.actions.show'), target: '_blank' %>
        <%= link_to t('helpers.actions.edit'), edit_admin_news_path(news), class: "edit", title: t('helpers.actions.edit') %>
        <%= link_to t('helpers.actions.destroy'), admin_news_path(news), class: "destroy", title: t('helpers.actions.destroy'),
          data: {confirm: t('helpers.actions.confirm'), method: :delete } %>
      </div>
    </div>
  </li>
  <% end %>
</ul>


<%= f.select :action, L::News.mass_actions_for_select, include_blank: t('prompt', scope: [:helpers, :mass]) %>
<% end %>

<%= will_paginate @news %>
  
<% end %>
