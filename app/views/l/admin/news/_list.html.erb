<%= form_for :selection, url: '#', html: {method: :post} do |f| %>
  <ul class="items-list">
    <%= render partial: 'news', collection: @news, locals: {f: f} %>
    <% unless @news.next_page.nil? %>
    <li class="row show-more">
      <div class="columns small-12 text-center">
        <%= link_to t('.more'), url_for(params.merge(page: @news.next_page)), data: {remote: true, type: :script, disable_with: t('.wait', default: "Loading...")} %>
      </div>
    </li>
    <% end %>
  </ul>
<% end %>
