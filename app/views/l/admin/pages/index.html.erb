<% title t('.title') %>

<%= content_tag(:p, flash[:notice], class: :notice) if flash.key? :notice %>
<%= content_tag(:p, flash[:alert], class: :alert) if flash.key? :alert %>

<%= render 'filter' %>

<ul class="row items-list-header">
  <li class="columns small-4">
    <%= custom_check_box(:selection, :all_ids, {}, 1, nil) %>
    <%= sort_column :title, L::Page.human_attribute_name(:title), disabled: !filtering? %>
  </li>
  <li class="columns small-2"><%= sort_column :url, L::Page.human_attribute_name(:url), disabled: !filtering? %></li>
  <li class="columns small-3"><%= sort_column :updated_at, L::Page.human_attribute_name(:updated_at), disabled: !filtering? %></li>
  <li class="columns small-3"><%= sort_column :created_at, L::Page.human_attribute_name(:created_at), disabled: !filtering? %></li>
</ul>


<%= form_for :selection, url: '#', html: {method: :post} do |f| %>
  <ul class="items-list <%= 'filtered' if filtering? %>" data-sortable-update="<%= sort_admin_pages_path %>">
    <%= render partial: 'page', collection: @pages, locals: {f: f} %>
  </ul>
<% end %>

