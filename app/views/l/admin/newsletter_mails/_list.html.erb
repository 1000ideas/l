<%= form_for :selection, url: '#', html: {method: :post} do |f| %>
<ul class="items-list one-column" data-page="<%= @newsletter_mail.current_page %>">
  <%= render partial: 'newsletter_mail', collection: @newsletter_mail, locals: {f: f} %>
  <% unless @newsletter_mail.next_page.nil? %>
    <li class="row show-more">
      <div class="columns small-12 text-center">
        <%= link_to t('.more'), url_for(params.merge(page: @newsletter_mail.next_page)), data: {remote: true, type: :script, disable_with: t('.wait', default: "Loading...")} %>
      </div>
    </li>
    <% end %>
</ul>
<% end %>
