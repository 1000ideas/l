<ul class="submenu">
  <li class="show-more"><%= link_to fa_icon('caret-down'), '#', data: {dropdown: 'submenu-dropdown'} %></li>
  <li class="selection"><%= link_to fa_icon('trash-o fw', text: t('.destroy')), bulk_destroy_admin_newsletter_mails_path, data: {method: :delete, confirm: t('.destroy_confirm', default: "Sure?")} %></li>
  <% if action_name == 'index' %>
    <% if params[:unconfirmed] %>
      <li><%= link_to fa_icon('bars fw', text: t('.index')), admin_newsletter_mails_path %></li>
      <li class="selection"><%= link_to fa_icon('check-circle fw', text: t('.confirm')), bulk_confirm_admin_newsletter_mails_path(), data: {method: :put} %></li>
    <% else %>
      <li><%= link_to fa_icon('bars fw', text: t('.unconfirmed')), unconfirmed_admin_newsletter_mails_path %></li>
    <% end %>
    <li><%= link_to fa_icon('envelope-o fw', text: t('.send_mail')), send_mail_admin_newsletter_mails_path %></li>
  <% else %>
    <li><%= link_to fa_icon('bars fw', text: t('.index')), admin_newsletter_mails_path %></li>
    <li><%= link_to fa_icon('bars fw', text: t('.unconfirmed')), unconfirmed_admin_newsletter_mails_path %></li>
  <% end %>

</ul>
<ul id="submenu-dropdown" class="f-dropdown axis-right" data-dropdown-content>
</ul>
