<% content_for :submenu do %>
  <%= render "submenu" %>
<% end %>

<% title t('newsletter_mails.index.title') %>
<% breadcrumbs_admin link_to(t('newsletter_mails.index.title'), newsletter_mails_path) %>

<p id="notice"><%= notice %></p>

<ul class="items-list one-column" data-page="<%= @newsletter_mail.current_page %>">
  <li class="header">
    <div class="group">
      <div><%= L::NewsletterMail.human_attribute_name :mail %></div>
    </div>
  </li>
  <% @newsletter_mail.each do |news| %>
  <li>
    <div class="group">
      <div class="select"><%= selection_tag news %></div>
      <div><%= news.mail %></div>
      <div class="options">
        <%= link_to t('destroy'), newsletter_mail_path(news), class: "destroy", title: t('destroy'),
          data: {confirm: t('confirm'), method: :delete } %>
      </div>
    </div>
  </li>
  <% end %>
</ul>

<%= will_paginate @newsletter_mail %>
