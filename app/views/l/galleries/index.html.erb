<% content_for :submenu do %>
  <%= render "submenu" %>
<% end %>

<% title t('galleries.index.title') %>
<% breadcrumbs_admin link_to(t('galleries.index.title'), galleries_path) %>

<p id="notice"><%= notice %></p>

<%= render partial: 'l/partials/switcher', object: @galleries %>
<ul class="items-list three-columns" data-page="<%= @galleries.current_page %>">
  <li class="header">
    <div class="group">
      <div><%= L::Gallery.human_attribute_name :name %></div>
      <div><%= L::Gallery.human_attribute_name :content %></div>
      <div><%= L::Gallery.human_attribute_name :thumb %></div>
    </div>
  </li>
  <% @galleries.each do |gallery| %>
  <li>
    <div class="group">
      <div class="select"><%= selection_tag gallery %></div>
      <div><%= gallery.email %></div>
      <div><%= gallery.role %></div>
      <div class="options">
        <%= link_to t('show'), gallery, class: "show", title: t('show'), target: '_blank' %>
        <%= link_to t('edit'), edit_gallery_path(gallery), class: "edit", title: t('edit') %>
        <%= link_to t('destroy'), gallery, class: "destroy", title: t('destroy'),
          data: {confirm: t('confirm'), method: :delete } %>
      </div>
    </div>
  </li>
  <% end %>
</ul>

<%= will_paginate @galleries %>
