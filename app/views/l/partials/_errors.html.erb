<% if errors.any? %>
  <div id="error_explanation" class="alert">
    <h2><%= t 'errors.template.header', count: errors.count, model: errors.instance_variable_get("@base").class.model_name.human %></h2>
    <ul>
      <% errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
