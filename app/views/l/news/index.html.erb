<% content_for :submenu do %>
  <%= render "submenu" %>
<% end %>


<% title t('news.index.title') %>
<% breadcrumbs_admin link_to(t('news.index.title'), news_index_path) %>

<p id="notice"><%= notice %></p>

<%= render partial: 'l/partials/switcher', object: @news %>


<ul class="items-list one-column" data-page="<%= @news.current_page %>">
  <li class="header">
    <div class="group">
      <div><%= L::News.human_attribute_name :title %></div>
    </div>
  </li>
  <% @news.each do |news| %>
  <li>
    <div class="group">
      <div class="select"><%= selection_tag news %></div>
      <div><%= news.title %></div>
      <div class="options">
        <%= link_to t('show'), news_path(news), class: "show", title: t('show'), target: '_blank' %>
        <%= link_to t('edit'), edit_news_path(news), class: "edit", title: t('edit') %>
        <%= link_to t('destroy'), news_path(news), class: "destroy", title: t('destroy'),
          data: {confirm: t('confirm'), method: :delete } %>
      </div>
    </div>
  </li>
  <% end %>
</ul>

<%= link_to t('destroy_selected'), 
  "javascript: LazyAdmin.destroy_selected('.selection','news')", 
  data: { confirm: t('confirm') } %>
<%= will_paginate @news %>
