<% title t('.title'), scope: :admin %>

<div class="row login-box">
  <div class="columns small-12">
    <h2><%= t('.title') %></h2>

    <%= content_tag :div, class: 'alert-box alert', data: {alert: true} do %>
      <%= alert %>
      <%= link_to raw('&times;'), '#', class: :close %>
    <% end unless alert.blank? %>
    <%= content_tag :div, class: 'alert-box success', data: {alert: true} do %>
      <%= notice %>
      <%= link_to raw('&times;'), '#', class: :close %>
    <% end unless notice.blank? %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, tabindex: 1, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, tabindex: 2 %>
      </div>
      <%- if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, tabindex: 3 %>
        <%= f.label :remember_me %>
      </div>
      <%- end -%>
      <div class="center-button">
        <%= f.button t('.submit'), tabindex: 4, class: [:button, :secondary, :round] %>
      </div>
    <% end %>

    <% if  devise_mapping.registerable? || devise_mapping.recoverable? %>
    <div class="buttons">
      <% if devise_mapping.registerable? %>
      <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name) %>
      <% end %>
      <% if devise_mapping.recoverable? %>
      <%= link_to t('devise.shared.links.password'), new_password_path(resource_name) %>
      <% end %>
    </div>
    <% end %>

  </div>
</div>
