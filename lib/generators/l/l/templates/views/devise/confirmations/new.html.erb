<% title [t('admin.title'), '::', t('.title') ] * ' ' %>
<div class="center-box" id="confirm-box">
  <h2><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
    <%= render partial: 'devise/shared/errors', object: resource.errors %>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <%= f.submit t('.submit') %>
  <% end %>

  <div class="shared-links">
    <%= render partial: "devise/shared/links" %>
  </div>
</div>
