<%= form_for L::NewsletterMail.new, url: newsletter_mails_path, id: :newsletter, remote: true do |f| %>
  <% if flash.key? :newsletter_alert %>
    <%= content_tag :div, flash[:newsletter_alert] id: 'newsletter_notice', class: :alert %>  
  <% else %>
    <%= content_tag :div, flash[:newsletter_notice] id: 'newsletter_notice', class: :notice %>  
  <% end %>

  <%= f.label :mail %>
  <%= f.text_field :mail %>
  <%= f.button %>
<% end %>
