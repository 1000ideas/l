<%= content_tag :div, id: 'newsletter_notice', class: flash[:newsletter_notice_class] do %>
  <%= flash[:newsletter_notice] %>
<% end %>
<%= form_for L::NewsletterMail.new, url: newsletter_mails_path, id: 'newsletter', remote: true do |f| %>
  <%= f.label :mail, t('newsletter.name'), class: 'cufon' %>
  <%= f.text_field :mail, placeholder: t('newsletter.placeholder') %>
  <%= button_tag t('newsletter.sign'), :name=> nil, class: 'cufon' %>
<% end %>
